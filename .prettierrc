{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "arrowParens": "always",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 4
      }
    }
  ],
  "space-before-function-paren": [
    "error",
    {
      "anonymous": "always",
      "named": "always",
      "asyncArrow": "always"
    }
  ]
}
